<h4>Start conversation</h4>

<%= form_tag messages_path, method: :post do %>
<!--
	<div class="form-group">
		<%= label_tag 'message[subject]', 'Subject' %>
		<%= text_field_tag 'message[subject]', nil, class: 'form-control', required: true %>
	</div>
-->

	<%= hidden_field(:message, "subject", value: "ok") %>

	<% if params[:recipient] %>

		<%= hidden_field(:message, "recipients", value: params[:recipient] %>

		<h4>Toshr: <%= User.find(params[:recipient]).username %></h4>

	<% else %>	
		<div class="form-group">
			<%= label_tag 'recipients', 'To:' %>
			<%= select_tag 'recipients', recipients_options, multiple: true, class: 'form-control select-js' %>
		</div>
	<% end %>

	<div class="form-group">
		<%= label_tag 'message[body]', 'Message' %>
		<%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control new-message-box', required: true %>
	</div>


	<%= submit_tag 'Send', class: 'btn btn-primary' %>
<% end %>