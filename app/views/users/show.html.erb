<% provide(:title, @user.username) %>
<div class="row">
	<aside class ="col-xs-4">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.username %>
		</h1>
		<%= @first_word.name %>
		<%= @first_word_dreams %>
		<%= @first_word_first_assoc.name %>
	</aside>
	<div class="col-xs-8">
		<% if @user.dreams.any? %>
			<h3>Dreams (<%= @user.dreams.count %>)</h3>
			<ol class="list-unstyled dreams">
				<%= render @dreams %>
			</ol>
			<!-- renderer parameter is needed by will_paginate-boostrap gem -->
			<%= will_paginate @dreams, renderer: BootstrapPagination::Rails %>
		<% end %>
	</div>
</div>