	
	<div class="dream">


		<div class="dream-right">
			<div class="dream-right-top">
				<div class="dream-right-top1">
					<span>
						<h1>				
							<%= link_to article.title, article %>
							<% if current_user && current_user.admin? %>
								<% unless article.published %>
									(not published)
								<% end %>
							<% end %>
						</h1>
					</span>
					
					<span class="small-font">submitted <%= time_ago_in_words(article.created_at) %> ago by</span>
					<span class="dreamer1 small-font"><%= link_to article.user.name, article.user %></span>
					<span class="dreamer2 small-font"><%= link_to "@#{article.user.username}", article.user %></span>				
				</div>

			</div>

			<%= truncate(article.body, length: 500) %>
	
			
		</div>
	</div>


