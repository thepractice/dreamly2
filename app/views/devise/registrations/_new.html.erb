 <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title" id="myModalLabel">Create new account</h4>
      </div>
      <div class="modal-body">
        <div class="row">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: {"data-type" => :json, class: 'form-horizontal', id: 'signup_form'}, wrapper: :horizontal_form) do |f| %>
      
            <div id="signup_error_explanation_wrapper" class="alert alert-danger" style="display:none;">
              <button type="button" class="close" data-hide="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <div id="signup_error_explanation"></div>
            </div>
            <%= devise_error_messages! %>
            <%= f.input :email %>
            <%= f.input :username %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
          <% end %>
     

        </div>
      </div>
    </div>
  </div>
