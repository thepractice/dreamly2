 <div class="modal-dialog sign-up-modal">
    <div class="modal-content">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: {"data-type" => :json, class: 'form-horizontal row', id: 'signup_form'}, wrapper: :horizontal_form) do |f| %>
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <%= icon('times') %>
        </button>
        <h3 class="modal-title" id="myModalLabel">Create new account</h4>
      </div>
      <div class="modal-body">

        <div id="oauth-links">
          <%= link_to(omniauth_authorize_path(resource_name, :google_oauth2), :class => "btn btn-square btn-login", :id => "google-login") do %>
            <%= icon('google') %>with Google
          <% end %>
          <%= link_to(user_omniauth_authorize_path(:facebook), :class => "btn btn-square btn-login", :id => "facebook-login") do %>
            <%= icon('facebook') %>with Facebook
          <% end %>         
          <%= link_to(omniauth_authorize_path(resource_name, :twitter), :class => "btn btn-square btn-login", :id => "twitter-login") do %>
            <%= icon('twitter') %>with Twitter
          <% end %>
          <%= link_to(omniauth_authorize_path(resource_name, :yahoo), :class => "btn btn-square btn-login", :id => "yahoo-login") do %>
            <%= icon('yahoo') %>with Yahoo
          <% end %>
        </div>        
        <h4 style="text-align:center; margin-bottom:20px; margin-top: 20px;">Or</h4>
    
          <div id="signup_error_explanation_wrapper" class="alert alert-danger" style="display:none;">
            <button type="button" class="close" data-hide="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div id="signup_error_explanation"></div>
          </div>
          <%= devise_error_messages! %>
          <%= f.input :name, required: false, hint: 'The long version of your name.' %>
          <%= f.input :username, required: false, hint: "Your @username must be unique and have no spaces." %>
          <%= f.input :email, hint: 'Your email will never be shown to the public.' %>         
          <%= f.input :password, hint: "Must be at least 8 characters." %>    

      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary btn-lg btn-square submit-btn">
          Create new account
        </button>
      </div>
        <% end %>
    </div>
  </div>
