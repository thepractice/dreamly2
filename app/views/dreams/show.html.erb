<% provide(:title, @dream.title) %>

<span class="title"><h4><%= @dream.title %></h4></span>
<span class="body"><%= @dream.body %></span>
<span class="timestamp">
	Dreamed <%= time_ago_in_words(@dream.created_at) %> ago.
</span>
<% if current_user == @dream.user %>
	<%= link_to "Edit", edit_dream_path(@dream.id) %>
	<%= link_to "Delete", @dream, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %> 