 <div class="modal-dialog modal-lg modal-dream">
    <div class="modal-content">

        <%= simple_form_for(Dream.new, remote: true, html: {"data-type" => :json, class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <%= icon('times') %>
        </button>
        <h3 class="modal-title" id="myModalLabel">New dream</h4>
      </div>
      <div class="modal-body">


    
          <div id="dream_error_explanation_wrapper" class="alert alert-danger" style="display:none;">
            <button type="button" class="close" data-hide="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <div id="dream_error_explanation"></div>
          </div>
                                     

          <div class="form-group string optional dream_dreamed_on">
            <label class="string optional col-sm-2 control-label" for="dream_dreamed_on">Dreamed on</label>
            <div class="col-sm-5">
              <div class="input-group date" data-provide="datepicker" data-date-autoclose="true" data-date-format="M d, yyyy" data-date-today-btn="linked" data-date-today-highlight="true">
                <%= tag("input", class: "string optional form-control", id: "dreamed-on-input", name: "dream[dreamed_on]", type: "text", placeholder: 'Today') %>
                <span class="input-group-addon"><%= icon('calendar', '', class: 'fa-lg') %></span>
              </div>
            </div>
            <div class="col-sm-5">
              <div class="btn-group btn-toggle" data-toggle="buttons">
                <label class="btn btn-default active">
                  <input type="radio" name="dream[private]" value="false" checked> Public
                </label>
                <label class="btn btn-default">
                  <input type="radio" name="dream[private]" value="true"> Private
                </label>
              </div>
            </div>
            
          </div>

          <div class="form-group string optional dream_impression">
            <label class="string optional col-sm-2 control-label" for="dream_impression">Impact</label>
            <div class="col-sm-10">
              <input id="impression" name="dream[impression]" data-slider-id='impression-slider' type="text" data-slider-min="1" data-slider-max="3" data-slider-step="1" data-slider-value="1" data-slider-tooltip="hide" value="1"/>
              <span id="impression-slider-value">Normal</span>
            </div>
          </div>
                                    

       



          <%= f.input :title, input_html: { id: "dream-title-textarea" } %>
          <%= f.input :body, label: 'Dream', placeholder: 'Use #hashtags to automatically categorize your dreams. Put the "@" symbol before any @name or @word to make it always private.', required: false, input_html: { id: "dream-body-textarea" } %>


     <script>
      $(function() {
          $('#dream-body-textarea').editable({
            inlineMode: false

          })
      });


    </script>  


        </div>
        <div class="modal-footer">

          <button type="submit" id="submit-dream-btn" class="btn btn-primary btn-square submit-btn">
            <%= icon('paper-plane') %>Post dream
          </button>
        <% end %>
     

        </div>
    </div>
  </div>

