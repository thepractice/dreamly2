<% provide(:title, 'Dreamfeed') %>

<div>
	<h3 class="content-title">Dreamfeed</h3>
	<ul class="nav nav-pills nav-pills-inline" role="tablist">
		<% if params[:impression] == '2' %>
			<li><%= link_to "All", dreams_path %></li>
			<li class="active"><%= link_to "Big", "?impression=2" %></li>
			<li><%= link_to "Huge", "?impression=3" %></li>
		<% elsif params[:impression] == '3' %>
			<li><%= link_to "All", dreams_path %></li>
			<li><%= link_to "Big", "?impression=2" %></li>
			<li class="active"><%= link_to "Huge", "?impression=3" %></li>
		<% else %>
			<li class="active"><%= link_to "All", dreams_path %></li>
			<li><%= link_to "Big", "?impression=2" %></li>
			<li><%= link_to "Huge", "?impression=3" %></li>
		<% end %>
	</ul>
</div>
<ol class="list-unstyled dreams" id ="all-dreams">
	<%= render @dreams %>
</ol>
<!-- renderer parameter is needed by will_paginate-boostrap gem -->
<%= will_paginate @dreams, renderer: BootstrapPagination::Rails %>